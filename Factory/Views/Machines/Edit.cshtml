@{
  Layout = "_Layout";
}

@model Factory.Models.Machine

<h2>Edit</h2>

<h4>Edit this Machine's info: @Html.DisplayFor(model => model.MachineName)</h4>

@using (Html.BeginForm())
{
    @Html.HiddenFor(model => model.MachineId)

    @Html.LabelFor(model => model.MachineName)
    @Html.EditorFor(model => model.MachineName)

    @Html.Label("Select an Engineer")
    @Html.DropDownList("EngineerId") 

    <input type="submit" value="Save" />
}

<p>@Html.ActionLink("Back to list", "Index")</p>