@{
  Layout = "_Layout";
}

@model Factory.Models.Machine  

<h4>Add a new Machine</h4>

@using (Html.BeginForm())
{
    @Html.LabelFor(model => model.MachineName)
    @Html.TextBoxFor(model => model.MachineName)

    @Html.LabelFor(model => model.MachineFunctionality)
    @Html.TextBoxFor(model => model.MachineFunctionality)

    @Html.Label("Select Engineer")
    @Html.DropDownList("EngineerId") 

    <input type="submit" value="Add new machine" class="btn btn-default" />
}
<p>@Html.ActionLink("Show all machines", "Index")</p>